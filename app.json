{
  "expo": {
    "name": "Notesapp",
    "slug": "notesapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/notesapplogo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/notesapplogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "scheme": "notesapp",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.notesapp.notesapp",
      "infoPlist": {
        "NSDocumentsFolderUsageDescription": "This app needs access to documents folder to manage notes and files.",
        "NSDownloadsFolderUsageDescription": "This app needs access to downloads folder to save and export notes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/notesapplogo.png",
        "backgroundColor": "#6366f1"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.notesapp.notesapp",
      "compileSdkVersion": 35,
      "targetSdkVersion": 35,
      "buildToolsVersion": "35.0.0",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/images/notesapplogo.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-file-system"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
